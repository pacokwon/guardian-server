{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/controller/*.ts",
    "src/repository/*.ts",
    "src/model/*.ts",
    "src/common/error.ts"
  ],
  "spec": {
    "outputDirectory": "./docs",
    "specVersion": 3,
    "host": "localhost:3000",
    "name": "Guardian",
    "description": "Swagger docs for guardian REST API",
    "license": "MIT",
    "schemes": ["http"]
  },
  "routes": {
    "routesDir": "./src"
  }
}
